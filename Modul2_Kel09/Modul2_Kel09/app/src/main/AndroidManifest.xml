<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.modul2_kel09">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Modul2_kel09">
        <activity
            android:name="com.example.modul2_kel09.KelompokActivity"
            android:exported="true"
            android:label="@string/title_activity_nama_nim"
            android:theme="@style/Theme.Modul2_Kel09.NoActionBar" />
        <activity android:name="com.example.modul2_kel09.DetailActivity" />
        <activity
            android:name="com.example.modul2_kel09.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.modul2_kel09.LandingPageActivity" />
        <activity
            android:name="com.example.modul2_kel09.MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>